<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Content GPT</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body style="max-width: 75%" class="mx-auto">
    <div class="mt-5 flex flex-col">
      <div class="flex justify-between items-center">
        <h1 class="font-bold text-3xl">Content GPT</h1>
        <a
          class="bg-sky-400 border-2 border-sky-700 p-5 text-white"
          href="/generate"
        >
          Generate Content
        </a>
      </div>
      <div class="mt-10 flex">
        <% for(post of posts) { %>
        <div
          class="basis-1/3 border-2 border-stone-300 p-3 m-3 hover:bg-sky-400 hover:border-sky-900 hover:cursor-pointer"
        >
          <p class="bg-sky-400 inline p-1 rounded text-white">
            <%= post.type %>
          </p>
          <p class="text-xl mt-2"><%= post.topic %></p>
          <p class="mt-2 text-justify"><%= post.data.slice(0, 140) %>...</p>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
